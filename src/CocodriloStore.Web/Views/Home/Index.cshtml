@model IEnumerable<CocodriloStore.Web.Models.Produto>

@{
    ViewData["Title"] = "Catálogo";
}

<h2>Catálogo de Produtos</h2>

<div class="row">
    @foreach (var produto in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow">
                @if (!string.IsNullOrEmpty(produto.ImagemUrl))
                {
                    <img src="@produto.ImagemUrl" class="card-img-top" alt="Imagem" style="object-fit: cover; height: 200px;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@produto.Nome</h5>
                    <p class="text-muted">@produto.Categoria?.Nome</p>
                    <p>@produto.Descricao</p>
                    <p><strong>R$</strong> @produto.Preco.ToString("F2")</p>
                    <p>Estoque: @produto.Estoque</p>
                    <p><strong>Vendedor:</strong> @produto.Vendedor?.Nome</p>
                    <a asp-controller="Produtos" asp-action="Detalhes" asp-route-id="@produto.Id" class="btn btn-sm btn-outline-info mt-2">Ver detalhes</a>
                </div>
            </div>
        </div>
    }
</div>